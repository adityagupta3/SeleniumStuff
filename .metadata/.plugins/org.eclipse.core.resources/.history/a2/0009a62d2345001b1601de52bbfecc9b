package google;

import java.net.InetAddress;
import java.net.UnknownHostException;

import org.openqa.selenium.By;
import org.openqa.selenium.ElementNotVisibleException;
import org.openqa.selenium.NoSuchElementException;
import org.openqa.selenium.SessionNotCreatedException;
import org.openqa.selenium.StaleElementReferenceException;
import org.openqa.selenium.TimeoutException;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebDriverException;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;



public class LaunchPage {

	public static void main(String[] args) throws InterruptedException, UnknownHostException {
		// TODO Auto-generated method stub
		String path = System.getProperty("user.dir");
		String URL="http://admin:Bravura%23%23@akldc01:1947/_int_/sessions.html";
		System.out.println(path); 
		System.setProperty("webdriver.chrome.driver", path+"\\chromedriver.exe");
		
		String region = InetAddress.getLocalHost().getHostName();
		region=region.toLowerCase();
		System.out.println("Computer name = "+region);
		
		if(region.contains("akl")){
			URL = "http://admin:Bravura%23%23@akldc01:1947/_int_/sessions.html";
		}else if(region.contains("ggn")) {
			URL = "http://admin:Bravura%23%23@akldc01:1947/_int_/sessions.html";
		}
		
		WebDriver driver = new ChromeDriver();
		
		driver.navigate().to(URL);
		driver.manage().window().maximize();
		
		
		
		for (int i = 0; i < 999; i++) {
			//WebElement colValue= driver.findElement(By.xpath("/html/body/table[2]/tbody/tr[2]/td[3]/table/tbody/tr[2]/td/div/table/tbody/tr[2]/td[11]"));
			
						 
			try {
				WebElement colValue= driver.findElement(By.xpath("/html/body/table[2]/tbody/tr[2]/td[3]/table/tbody/tr[2]/td/div/table/tbody/tr[2]/td[11]"));
				colValue.click();
			} catch (NoSuchElementException e){
				i = 9999;
			}catch (ElementNotVisibleException e){
				i = 9999;
			}catch (StaleElementReferenceException e){
				i = 9999;
			}catch (SessionNotCreatedException e){
				i = 9999;
			}catch (TimeoutException e){
				i = 9999;
			}catch (WebDriverException e){
				i = 9999;
			}finally {
			     if(i == 9999)
			     {
			    	 break;
			     }
			     
			}
			
					
			
			try {
				WebDriverWait wait = new WebDriverWait(driver, 15);
				wait.until(ExpectedConditions.visibilityOfElementLocated(By.xpath("/html/body/table[2]/tbody/tr[2]/td[3]/table/tbody/tr[2]/td/div/table/tbody/tr[2]/td[11]")));
			} catch (NoSuchElementException e){
				i = 9999;
			}catch (ElementNotVisibleException e){
				i = 9999;
			}catch (StaleElementReferenceException e){
				i = 9999;
			}catch (SessionNotCreatedException e){
				i = 9999;
			}catch (TimeoutException e){
				i = 9999;
			}catch (WebDriverException e){
				i = 9999;
			}finally {
			     if(i == 9999)
			     {
			    	 break;
			     }
			     
			}
			
			System.out.println("Done ");
			
        }
		
		Thread.sleep(2000);
		driver.close();

	}

}
